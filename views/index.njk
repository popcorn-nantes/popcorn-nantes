{% extends "layout.njk" %} 
{% import "macros.njk" as macros %}

{% block head %}
  <title>Popcorn Nantes</title>
  {{ 
    macros.socialMetas(
      title="Popcorn : trouvez un développeur freelance à Nantes",
      description="Trouvez un développeur freelance à Nantes sans intermédiaire et sans frais.",  
      url=SITE_BASE_URL,
      image=SITE_BASE_URL + "/media/images/popcorn.jpg"
    ) 
  }}
{% endblock %}

{% block content %}
  <div class="container mx-auto text-center my-6">
    <h1 class="font-bold text-2xl">
    Trouvez un développeur freelance à Nantes</h1>
    <div><em>avec (vraiment) 0% de commission</em></div>
    {% include "searchBar.njk" %}
  </div>

  <div id="search-results" class="container mx-auto flex flex-wrap mb-6">
  </div>
  <div id="persons" class="container mx-auto flex flex-wrap mb-6">
    {% for person in persons %}
      <div data-type="person" class="w-full sm:w-1/2 md:w-1/2 lg:w-1/3 xl:w-1/4 p-2" id="{{person.$slug}}" >
        <div class="bg-white shadow rounded">
          <div class="overflow-hidden rounded-t">
            <picture>
              <source class="lazy" data-srcset="{{person.photo.thumbnailWebp}}" type="image/webp">
              <img alt="{{ person.prenom }} {{ person.nom }}" class="lazy object-cover h-64 md:h32 w-full" data-src="{{person.photo.thumbnailJpeg}}" />
            </picture>
          </div>
          <div class="p-2 text-center">
            <h3 class="mt-3 text-gray-700 font-800 text-lg">{{ person.prenom }} {{ person.nom }}</h3>
            <h2 class="font-bold text-xl text-gray-700">{{ person.titre }}</h2>
            <h4 class="text-gray-700 font-thin mb-6 mt-1 text-sm">{{ person.sous_titre }}</h4>
            <div class="mt-6">
              {% for technology in person.technologies %}
              <span onclick="searchTechnology('{{technology}}')" class="cursor-pointer inline-block bg-gray-200 rounded-full px-3 py-2 text-xs font-semibold text-gray-700 mr-2 my-1">
                {{technology}}
              </span>
              {% endfor %}
            </div>
            <div class="my-6">
              <a href="/person/{{person.$slug}}" class="bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Voir le profil
              </a>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}

{% block scripts %}
  <script src="/search.js"></script>
  <script>
   // @see https://www.andreaverlicchi.eu/lazyload/
    window.lazyLoadOptions = {
      elements_selector: ".lazy"
    };
    window.addEventListener(
      "LazyLoad::Initialized",
      function (event) {
          window.lazyLoadInstance = event.detail.instance;
      },
      false
    );
    function searchTechnology(technology) {
      const search = document.getElementById("search");
      search.value = technology
      search.dispatchEvent(new Event('input'));
    }
  </script>
  <script src="/lazyload.js"></script>
{% endblock %}
